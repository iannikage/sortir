{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}
    <h1>Sortie : {{ sortie.nom }}</h1>

    <div class="container">
        <div class="infos-sortie">
                 <div> Nom de la sortie : {{ sortie.nom }}</div>
                 <div> Date et heure de la sortie : {{ sortie.dateHeureDebut | date('d-m-Y H:i') }}</div>
                 <div> Date limite d'inscription : {{ sortie.dateLimiteInscription | date('d-m-Y H:i') }}</div>
                 <div> Nombre de places: {{ sortie.nbInscriptionsMax }}</div>
                 <div> Dur√©e: {{ sortie.duree }} minutes</div>
                 <div> Description et infos : {{ sortie.infosSortie }}</div>
                 <div> Campus: {{ sortie.campus }}</div>
                 <div> Lieu: {{ sortie.lieu.nom }}</div>
                 <div> Rue: {{ sortie.lieu.rue }}</div>
                 <div> Code Postal: {{ sortie.lieu.ville.codePostal }}</div>
                 <div> Latitude: {{ sortie.lieu.latitude }}</div>
                 <div> Longitude: {{ sortie.lieu.longitude }}</div>
        </div>


    </div>

        <div class="sortie-liste-participants">
            <div> Liste des participants inscrits : </div>
            <table class="tableau-participants-sortie">
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                </tr>

                {% for participant in sortie.participants %}
                <tr>
                    <td> {{ participant.pseudo }}</td>
                    <td> {{ participant.nom }}</td>

                </tr>
                {% endfor %}
            </table>
        </div>

{% endblock %}



