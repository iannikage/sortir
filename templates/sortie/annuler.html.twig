{% extends 'base.html.twig' %}

{% block title %}Annuler une sortie{% endblock %}

{% block body %}


    <div class="annuler-sortie">
        <h1>Annuler une sortie</h1>

        <article>

            <table>
                <tr>
                    <td>Nom de la sortie : </td>
                    <td>{{ sortie.nom }}</td>
                </tr>
                <tr>
                    <td>Date de la sortie : </td>
                    <td>{{ sortie.dateHeureDebut| date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <td>Campus : </td>
                    <td>{{ sortie.campus }}</td>
                </tr>
                <tr>
                    <td>Lieu : </td>
                    <td>{{ sortie.lieu.rue }} {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom }}</td>
                </tr>
            </table>



        </article>


        <br>
        <input type="submit" value="Enregister">
        <input type="reset">

    </div>

{% endblock %}
